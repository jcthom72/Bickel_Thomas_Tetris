<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="csci4020.shawnbickel_judsonthomas.final_project.bickel_thomas_tetris.MainActivity"
    android:background="#002E63"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_weight=".1">

        <TextView
            android:text="Score: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="1.00"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:paddingTop="10dp" />

        <TextView
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gameScore"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.00"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:elevation="20dp"
            android:paddingTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/play_image"
            android:layout_weight="1.00"
            android:layout_gravity="center"
            android:id="@+id/play_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pause_button"
            android:layout_weight="1.00"
            android:layout_gravity="center"
            android:id="@+id/pause_button" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_weight=".1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CW"
            android:id="@+id/CW" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CCW"
            android:id="@+id/CCW" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UP"
            android:layout_weight="1"
            android:text="UP" />
    </LinearLayout>


    <csci4020.shawnbickel_judsonthomas.final_project.bickel_thomas_tetris.TetrisGameView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_grid"
        android:id="@+id/tetrisLayout"
        android:layout_weight=".9" />


</LinearLayout>