<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    tools:context="csci4020.shawnbickel_judsonthomas.final_project.bickel_thomas_tetris.MenuActivity"
    android:background="#002E63">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".10"
        android:weightSum="6">

        <TextView
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#00FFFF"
            android:textSize="24sp" />

        <TextView
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textColor="#FFFF00"
            android:textSize="24sp" />

        <TextView
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textColor="#FF00FF"
            android:textSize="24sp" />

        <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textColor="#FF8C00"
            android:textSize="24sp" />

        <TextView
            android:text="I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textColor="#03C03C"
            android:textSize="24sp" />

        <TextView
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textColor="#FF6961"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".90"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round"
            android:id="@+id/round_button"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle"
            android:layout_below="@+id/play_button"
            android:layout_alignRight="@+id/play_button"
            android:layout_alignEnd="@+id/play_button"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:id="@+id/rule_button"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle"
            android:layout_below="@+id/round_button"
            android:layout_alignRight="@+id/play_button"
            android:layout_alignEnd="@+id/play_button"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp">

        </Button>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attribution"
            android:id="@+id/attribution_button"
            android:textColor="#ffffff"
            android:layout_marginTop="44dp"
            android:background="@drawable/circle"
            android:layout_below="@+id/rule_button"
            android:layout_alignLeft="@+id/rule_button"
            android:layout_alignStart="@+id/rule_button">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/play_button"
            android:textColor="#ffffff"
            android:background="@drawable/circle"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </Button>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tetris_t_block"
            android:id="@+id/greenImageview"
            android:layout_alignTop="@+id/play_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tetris_z_block"
            android:id="@+id/orangeImageview"
            android:layout_alignTop="@+id/round_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="21dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tetris_l_block"
            android:id="@+id/yellowImageview"
            android:layout_toLeftOf="@+id/orangeImageview"
            android:layout_toStartOf="@+id/orangeImageview"
            android:layout_above="@+id/orangeImageview" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/red_block"
            android:id="@+id/redImageview"
            android:layout_alignTop="@+id/orangeImageview"
            android:layout_toLeftOf="@+id/orangeImageview"
            android:layout_toStartOf="@+id/orangeImageview"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp" />

    </RelativeLayout>
</LinearLayout>
